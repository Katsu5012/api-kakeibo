// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String?  @unique
  name  String 
  password String
  disbursements Disbursement[]
  expenseItems expenseItem[]
  paymentMethods paymentMethod[]
 created_at DateTime @default(now())
}

model Disbursement {
id Int @default(autoincrement()) @id
date String
sum Int @default(0)
user User @relation(fields:[userId],references: [id],onDelete:Cascade,onUpdate:Cascade)
userId Int
expenseItem expenseItem @relation(fields:[expenseItemId],references: [id],onDelete:SetNull,onUpdate:Cascade)
expenseItemId Int
paymentMethod paymentMethod @relation(fields:[paymentMethodId],references: [id],onDelete:SetNull,onUpdate:Cascade)
paymentMethodId Int
}

model expenseItem{
  id Int @default(autoincrement()) @id
  expenseItemName String 
  expenseDate String
  user User @relation(fields:[userId],references: [id],onDelete:Cascade,onUpdate:Cascade)
  userId Int
  disbursements Disbursement[]
  paymentMethods paymentMethod[]
}

model paymentMethod {
 id Int @default(autoincrement()) @id
 paymentMethodName String
 user User @relation(fields:[userId],references: [id],onDelete:Cascade,onUpdate:Cascade)
 userId Int
 disbursements Disbursement[]
 expenseItems expenseItem[]
}